{
    "expo": {
        "name": "Nyengo Deliveries",
        "slug": "nyengo-deliveries",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "scheme": "nyengo",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#1A1A1A"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.nyengo.deliveries",
            "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "We need your location to show delivery routes and track deliveries.",
                "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to show delivery routes and track deliveries."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#FFCC00"
            },
            "package": "com.nyengo.deliveries",
            "permissions": [
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION",
                "ACCESS_BACKGROUND_LOCATION",
                "FOREGROUND_SERVICE"
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-secure-store",
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow Nyengo to use your location."
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/notification-icon.png",
                    "color": "#FFCC00"
                }
            ],
            [
                "react-native-android-widget",
                {
                    "fonts": [],
                    "widgets": [
                        {
                            "name": "NyengoSmallWidget",
                            "label": "Nyengo Status",
                            "description": "Quick status and earnings overview",
                            "minWidth": "110dp",
                            "minHeight": "40dp",
                            "targetCellWidth": 2,
                            "targetCellHeight": 1,
                            "resizeMode": "horizontal",
                            "widgetFeatures": "reconfigurable",
                            "previewImage": "./assets/widget-small-preview.png",
                            "updatePeriodMillis": 1800000
                        },
                        {
                            "name": "NyengoMediumWidget",
                            "label": "Nyengo Delivery",
                            "description": "Active delivery info and quick stats",
                            "minWidth": "250dp",
                            "minHeight": "80dp",
                            "targetCellWidth": 4,
                            "targetCellHeight": 1,
                            "resizeMode": "horizontal|vertical",
                            "widgetFeatures": "reconfigurable",
                            "previewImage": "./assets/widget-medium-preview.png",
                            "updatePeriodMillis": 1800000
                        },
                        {
                            "name": "NyengoLargeWidget",
                            "label": "Nyengo Dashboard",
                            "description": "Full dashboard with status, stats, and active delivery",
                            "minWidth": "250dp",
                            "minHeight": "180dp",
                            "targetCellWidth": 4,
                            "targetCellHeight": 2,
                            "resizeMode": "horizontal|vertical",
                            "widgetFeatures": "reconfigurable",
                            "previewImage": "./assets/widget-large-preview.png",
                            "updatePeriodMillis": 1800000
                        }
                    ]
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "router": {
                "origin": false
            },
            "eas": {
                "projectId": "your-project-id"
            }
        }
    }
}